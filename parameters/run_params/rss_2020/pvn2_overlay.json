{
  "ModelPVN": {
    "Stage1": {
      "emb_size": 50,
      "emb_layers": 1,
      "word_emb_size": 50,
      "emb_dropout": 0.5,
      "weight_override": true,
      "predict_confidence": false,
      "clip_observability": true,
      "cover_init_pos": true,
      "plan_every_n_steps": 5,
      "ignore_instruction": false,
      "lingunet": {
        "upscale_conv": true,
        "double_up": true,
        "embedding_size": 50
      }
    },
    "ActorCritic": {
      "h1": 4,
      "h2": 32,
      "structure_h1": 4,
      "obs_dim": 16
    },
    "Stage2":{
      "map_structure_channels": 2,
      "use_map_boundary": true,
      "add_vdist_to_mapinfo": false
    },
    "UseAux": {
      "class_features": false,
      "grounding_features": false,
      "class_map": true,
      "grounding_map": true,
      "goal_map": false,
      "lang": true,
      "regularize_map": true
    }
  },
  "PVNWrapper":
  {
    "learning_mode": "reinforcement_learning",
    "pvn_version": "v2",
    "stage1_file": false,
    "stage2_file": false,
    "wasserstein_reward": true,
    "wd_reward":{
      "stop_alpha": 0.5,
      "stop_p_alpha": 0.0,
      "visit_alpha": 0.3,
      "exploration_alpha": 1.0,
      "stop_oob_alpha": 3.0,
      "step_alpha": 0.04
    },
    "explore_reward_only": false
  }
}
